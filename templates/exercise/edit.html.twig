{% extends 'base.html.twig' %}

{% block title %}Edytuj ćwiczenie{% endblock %}

{% block body %}
    <div class="bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Edytuj ćwiczenie: {{ exercise.name }}</h1>

        {# Renderowanie formularza #}
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div class="form-group">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.muscleGroups, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.muscleGroups, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.muscleGroups, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.equipment, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.equipment, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.equipment, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        {{ form_end(form) }}

        <a href="{{ path('app_exercise_index') }}" class="btn btn-secondary mt-4">Anuluj i wróć</a>
    </div>
{% endblock %}
